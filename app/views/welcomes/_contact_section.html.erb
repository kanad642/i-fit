
        <%= form_for @welcome, url:   welcomes_path ,:method=>:POST , :remote=>true do |f|%>
                
                 <span class=" col-lg-12 text-center">
                      <p class="head-main yello-text removel " style="font-size: 25px; margin-top: 34px;">Registration Form</p>
                      <div class="col-md-12 col-sm-12">
                                <div class="form-group">                                   
                                      <%= f.text_field :name, placeholder:"Name" ,id:"Name", :class=>"form-control text-flid text-lable valid_title_field " , required:"required" %>
                                </div>
                     </div>
                      <div class="col-md-12 col-sm-12">
                                <div class="form-group">   
                                      <%= f.text_field :phone, placeholder:"Mobile Number" , pattern:"[789][0-9]{9}",id:"phone", :class=>"form-control text-flid text-lable valid_title_field " , required:"required" %>
                                </div>
                       </div>
                     <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                     <%= f.email_field :email, placeholder:"Email" ,id:"Email", :class=>"form-control text-flid text-lable valid_title_field " , required:"required" %>
                                </div>
                     </div> 
                        <div class="col-md-12 col-sm-12">
                                <div class="form-group">   
                                        <%= f.text_area :address, placeholder:"Address" ,id:"address", :class=>"form-control text-flid text-lable valid_title_field " , required:"required" %>
                                </div>
                       </div>
                      <div class="col-md-12 col-sm-12">
                       <div class="form-group">
                                    <button type="submit" class="btn btn-default" data-disable-with="Submitting...">Submit </button>
                           </div>
                     </div>
                 </span>
    
              <%end%>